<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#151825"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fon16"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-186dp" />

    <LinearLayout
        android:id="@+id/button_back"
        android:layout_margin="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        android:background="@drawable/transparenitem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_about"
        android:layout_margin="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        android:background="@drawable/transparenitem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_announcement_24"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_share"
        android:layout_margin="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        android:background="@drawable/transparenitem"
        app:layout_constraintRight_toLeftOf="@id/button_about"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_share_24"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_save"
        android:layout_margin="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        android:background="@drawable/transparenitem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/save"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_like"
        android:layout_margin="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        android:background="@drawable/transparenitem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/favourite"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_another"
        android:layout_margin="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        android:background="@drawable/transparenitem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_like"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/edit"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_sexr"
        android:layout_margin="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        android:background="@drawable/transparenitem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_save"
        app:layout_constraintRight_toLeftOf="@id/button_another"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/exit"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>