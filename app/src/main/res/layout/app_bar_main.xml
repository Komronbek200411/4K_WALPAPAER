                android:src="@drawable/fon11"
                />

            <ImageView
                android:id="@+id/fon13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fon13"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fon14"
                android:id="@+id/fon14"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/fon15"
                android:src="@drawable/fon15"
                />

            <ImageView
                android:id="@+id/fon16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fon16"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fon12"
                android:id="@+id/fon12"
                />

            <ImageView
                android:layout_width="match_parent"
