                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/fon7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fon7"
                />

            <ImageView
                android:id="@+id/fon8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fon8"
                />

            <ImageView
                android:id="@+id/fon9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fon9"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:layout_weight="1"
